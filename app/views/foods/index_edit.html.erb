<section>
  <!--for demo wrap-->
  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>High Price</th>
        <th>Low Price</th>
        <th>Price</th>
        <!-- <th>Quantity</th> -->
        <th>Cuisine</th>
        <th>Update</th>
        <th>Delete</th>
      </tr>
    </thead>
  


    <tbody>
      <% @foods.each do |food| %>
        <tr>
          <%= form_for food, :url => foods_edit_path(food), method: :get do |f|  %>  
            <td><%= f.text_field :name, value:food.name, class:"form-control form-control-sm" %></td>
            <td><%= f.text_field :high_price, value:food.high_price, class:"form-control form-control-sm" %></td>
            <td><%= f.text_field :low_price, value:food.low_price, class:"form-control form-control-sm" %></td>
            <td><%= f.text_field :normal_price, value:food.normal_price, class:"form-control form-control-sm" %></td>
            <!-- <td><%= f.text_field :quantity, value:food.quantity %></td> -->
            <td><%= f.text_field :category, value:food.category, class:"form-control form-control-sm" %></td>
            <td><%= f.submit "Update", class:"btn btn-primary btn-sm" %></td>
            <td>
              <%= link_to food, method: :delete, data: { confirm: 'Are you sure?' } do %>
                <i class="material-icons">delete_forever</i>
              <% end %>
            </td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</section>
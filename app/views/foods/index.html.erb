<section>
  <!--for demo wrap-->
  <div class="tbl-header">
    <table cellpadding="0" cellspacing="0" border="0">
      <thead>
        <tr>
          <th>Name</th>
          <th>Price</th>
          <th>Quantity</th>
          <th>Cuisine</th>
        </tr>
      </thead>
    </table>
  </div>
  <div class="tbl-content">
    <table cellpadding="0" cellspacing="0" border="0">
      <tbody>
        <% @foods.each do |food| %>
          <tr>
            <td class="text-monospace" id="name"><%= food.name %></td>
            <td class="text-monospace" id="low_price"><%= food.normal_price %></td>
            <td class="text-monospace"><%= food.quantity %></td>
            <td class="text-monospace"><%= food.category %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</section>


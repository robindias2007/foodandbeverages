<section>
  <!--for demo wrap-->
  <div class="tbl-header">
    <table cellpadding="0" cellspacing="0" border="0">
      <thead>
        <tr>
          <th>Name</th>
          <th>High Price</th>
          <th>Low Price</th>
          <th>Quantity</th>
          <th>Cuisine</th>
        </tr>
      </thead>
    </table>
  </div>
  <div class="tbl-content">
    <table cellpadding="0" cellspacing="0" border="0">
      <tbody>
        <% @foods.each do |food| %>
          <tr>
            <td><%= food.name %></td>
            <td><%= food.high_price %></td>
            <td><%= food.low_price %></td>
            <td><%= food.quantity %></td>
            <td><%= food.category %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</section>


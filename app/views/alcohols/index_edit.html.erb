<section>
  <!--for demo wrap-->
  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>High Price</th>
        <th>Low Price</th>
        <th>Price</th>
        <th>Quantity</th>
        <th>Category</th>
        <th>Update</th>
        <th>Delete</th>
      </tr>
    </thead>
  


    <tbody>
      <% @alcohols.each do |alcohol| %>
        <tr>
          <%= form_for alcohol, :url => alcohols_edit_path(alcohol), method: :get do |f|  %>  
            <td><%= f.text_field :name, value:alcohol.name %></td>
            <td><%= f.text_field :high_price, value:alcohol.high_price %></td>
            <td><%= f.text_field :low_price, value:alcohol.low_price %></td>
            <td><%= f.text_field :normal_price, value:alcohol.normal_price %></td>
            <td><%= f.text_field :quantity, value:alcohol.quantity %></td>
            <td><%= f.text_field :category, value:alcohol.category %></td>
            <td><%= f.submit "Update" %></td>
            <td>
              <%= link_to alcohol, method: :delete, data: { confirm: 'Are you sure?' } do %>
                <i class="material-icons">delete_forever</i>
              <% end %>
            </td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</section>